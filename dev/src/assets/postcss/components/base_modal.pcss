.base-modal {
    text-align: center;
    font-family: SF-400;
    color: #A4A4A4;
    h2 {
        font-family: SF-700;        
    }
    h3 {
        color: #9B9B9B;
    }
    p {
        color: #717171;
    }
    &__wrap {        
        background: #FBFBFB;            
        border: 1px solid #CECECE;            
        box-shadow: 0px 4px 71px rgba(0, 0, 0, 0.25);            
    }

}

@media (--desktop-m) {
    .base-modal {
        position: fixed; top: 0; left: 0; right: 0; bottom: 0; margin: auto;
        @include size(100%,100%);
        @include flex(center,center);  
        background: rgba(0,0,0,0.5);              
        &__wrap {
            padding: w(70) w(90);
            img {
                max-width: 100%
            }
            article {
                padding: w(30) 0;
            }
            h2 {
                font-size: w(30);                
                color:  #4F4F4F;;
            }              
            p {                
                font-size: w(20);                
            }  
            h3 {                
                font-size: w(15);
            }  
            h3, p {
                padding-top: w(15);
            }                    
            button {
                background: transparent;
                cursor: pointer;
                font-size: w(20);
                border: 1px solid #CECECE;                
                &:hover {
                    box-shadow: inset 0px 0px 13px rgba(0, 0, 0, 0.25);
                }
            }                 
        }
    }
}